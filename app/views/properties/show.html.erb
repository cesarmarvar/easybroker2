<p style="color: green"><%= notice %></p>
<div class="mg">
    <div class="singlePropertyDetail">
        <p class="large-bold"><%= @property["title"] %></p>
        <p class="regular"> <%= @property["location"]["name"] %></p>
        <img class="image" src=<%=@property["property_images"][0]["url"]%> />
        <%# <div class="division"> %>
        <p>Public id: <%= @property["public_id"] %></p>
        <p>Description: <%= @property["description"] %></p>
        <p>Property type: <%= @property["property_type"] %></p>
    </div>

    <div class="formContainer">
        <h3>Interested in this property?</h3>
        <p>Fill this form and we'll contact you:</p>
        <div class="form">
            <%= form_with url: "new_contact", method: :post do |form| %>

                <div>
                    <%= form.label :name, style: "display: block" %>
                    <%= form.text_field :name %>
                </div>

                <div>
                    <%= form.label :phone, style: "display: block" %>
                    <%= form.text_field :phone %>
                </div>

                <div>
                    <%= form.label :email, style: "display: block" %>
                    <%= form.text_field :email %>
                </div>

                <div>
                    <%= form.label :message, style: "display: block" %>
                    <%= form.text_field :message %>
                </div>

                <div>
                    <%= form.hidden_field :id, value: @property["public_id"] %>
                </div>
                
                <div>
                    <%= form.submit %>
                </div>
            <% end %>
        </div>
    </div>

        <p>
        <%= link_to "Back", "/" %>
        </p>
</div>
